{
	"compilerOptions": {
		"module": "esnext",
		"target": "es2018",
		"lib": ["esnext", "dom"],
		"noImplicitAny": true,
		"noImplicitThis": true,
		"removeComments": true,
		"preserveConstEnums": true,
		// "moduleResolution": "Node",

		"declaration": true,
		"sourceMap": true,
		"outDir": "./dist",
		"declarationDir": "./types",

		"baseUrl": ".",
        "paths": {
            "@/*": ["src/*"],
			"@utils/*": ["src/utils/*"]
        }
	},
	"include": ["src/**/*", "src/**/*.d.ts"],
	"exclude": ["node_modules", "**/*.spec.ts", "example/**/*"]
}